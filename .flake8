# -*- mode: toml -*-
# vi: set ft=toml :

[flake8]
application-import-names = hypermodern_python,tests
select = ANN,B,B9,BLK,C,D,DAR,E,F,I,S,W
docstring-convention = google
import-order-style = google
max-complexity = 10
ignore = E203,E501,W503,B904
max-line-length = 80
per-file-ignores = tests/*:S101
